            </div>
        </nav>
            
          @*<div>
            <div style="visibility:hidden">*@
        <div class="table-responsive">
            <table id="data-table-basic" class="table table-striped">
                <thead>
                    <tr>
                        
                        <th data-column-id="sender">Item Name </th>
                        <th data-column-id="received" data-order="desc">Price</th>
                        <th data-column-id="received" data-order="desc">Description</th>
                        <th data-column-id="received" data-order="desc">Photo</th>
                        <th data-column-id="sender">Delete</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var v in Model)
                    {
                        <tr>
                            
                            <td>@v.name</td>
                            <td>@v.price</td>
                            <td>@v.details</td>
                            <td><img height="150" width="150"  src="~/AdminImages/Posts/@v.path"></td>
                            
                            <td><a href="/AdminSide/Delete_post/@v.Id">Delete</a></td>
                        </tr>
                    }
            </table>
        </div>

